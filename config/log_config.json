{
    "log_folder": "logs",
    "log_files": {
        "system": "system.log",
        "error": "error.log",
        "debug": "debug.log",
        "camera": "camera.log",
        "motion": "motion.log"
    },
    "log_settings": {
        "max_file_size_mb": 10,
        "max_backup_count": 5,
        "log_level": "INFO",
        "date_format": "%Y-%m-%d %H:%M:%S",
        "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "auto_cleanup_days": 30
    },
    "display_settings": {
        "max_display_lines": 1000,
        "auto_scroll": true,
        "auto_refresh": false,
        "refresh_interval_seconds": 5,
        "font_family": "Consolas",
        "font_size": 9
    }
}